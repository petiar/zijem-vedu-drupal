<h3 class="text-center mb-4">Členovia platformy</h3>

<div class="py-5">
  <div class="swiper swiper-members">

    <div class="swiper-wrapper">
      <!-- Slides -->
      {% for member in members %}
      <div class="swiper-slide">
        <div class="member">
          <div class="member__image"><img src="{{  member.user_ref.avatar }}" alt=""></div>
          <p class="fw-bold color-violet mb-0">{{  member.user_ref.name.first_name }} {{ member.user_ref.name.last_name }}</p>
          <!-- <span class="member__meta">Biológia, Karolinska Institutet, Stockholm</span> -->
          <p><a href="https://zijemvedu.solved.fi/people/scientists/{{ member.user_ref.id }}" class="member__link mt-3">Viac info <i class="fas fa-arrow-right"></i></a></p>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="swiper-button-prev"><i class="fas fa-arrow-left"></i></div>
    <div class="swiper-button-next"><i class="fas fa-arrow-right"></i></div>

  </div>
</div>

<div class="d-flex py-3 justify-content-center">
  <a href="https://zijemvedu.solved.fi/register" class="btn btn-md btn-gradient-outline" target="_blank"><span>REGISTROVAŤ SA </span> <i class="fas fa-arrow-right"></i></span></a>
</div>
