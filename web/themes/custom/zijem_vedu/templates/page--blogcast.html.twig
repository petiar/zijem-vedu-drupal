<div class="site">
  <main class="site__main">

    <section class="site__entry">
      <div class="container">
        <div class="row align-items-end">
          <div class="col-12 col-lg-3"></div>
          <div class="col-12 col-lg-6"><h1 class="family-heading mb-0 text-center">Články a podcasty</h1></div>
          <div class="col-12 col-lg-3"></div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="links">
              {% set current = path('<current>')|split('/') %}
              <a href="/blogcast" class="link article-category-menu-item {% if current.2 is empty %}active{% endif %}">Všetky články</a>
              <a href="/blogcast/7" class="link article-category-menu-item {% if current.2 == 7 %}active{% endif %}">Podcasty</a>
              <a href="/blogcast/1" class="link article-category-menu-item {% if current.2 == 1 %}active{% endif %}">Blogy</a>
            </div>
          </div>
        </div>
      </div>
    </section>


    <section class="content">
      {{ page.content }}
    </section>

  </main>

  <footer class="site__footer">

    <div class="footer__upper">

      <div class="media">
        <div class="container">
          {{ page.newsletter_block }}
          <div class="row py-5">
            <div class="col-xl-6 offset-xl-3">
              {{ page.followus_block }}
            </div>
          </div>
        </div>
      </div>

      {{ page.partners_block }}


    </div>
    {{ footer_lower }}
  </footer>
</div>
