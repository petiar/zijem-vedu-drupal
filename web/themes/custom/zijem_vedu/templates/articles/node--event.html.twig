<div class="container">

  <div class="row">
    <div class="col-12">
      <div class="event__entry">
        <img src="{{ file_url(node.field_image.entity.fileuri | image_style('dlhy_obrazok_event_list')) }}" alt="{{ node.field_image.alt }}">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-xl-6 offset-xl-3">

      <div class="d-flex justify-content-between align-items-end py-5">
        <div class="entry__meta">
          <span class="label-gradient">{{ node.field_zaciatok.0.value|date('d. m. Y') }} - {{ node.field_koniec.0.value|date('d. m. Y') }}</span>
          <p class="text-muted fs-8 mt-1 mb-0">{{ content.field_miesto_konania }}</p>
        </div>
        <div class="entry__btn">
          <a href="/podujatia/starsie" class="btn btn-md btn-gradient-outline"><span>Staršie podujatia</span> <i class="fas fa-arrow-right"></i></a>
        </div>
      </div>

      <p class="color-violet-dark fw-bolder">{{ node.body.value|raw }}</p>
      {% if node.field_url|length > 0 %}
      <p class="color-violet-dark fw-bolder">Viac info o podujatí {{ label }} na {{ content.field_url }}</p>
      {% endif %}

      {{ content.field_galeria }}
      {{ content.field_tags }}
    </div>
  </div>
</div>
