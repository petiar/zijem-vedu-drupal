<div class="site">
  <main class="site__main">

    <section class="site__entry">
      <div class="container">
        <div class="row align-items-end">

          <div class="col-12 col-lg-3">
            {% if node.getType == 'article' %}
              <a href="{{ url('view.blogcast.page_1') }}" class="breandcrumb__link color-violet"><i class="fas fa-chevron-left"></i> <span>Blog</span></a>
            {% endif %}
            {% if node.getType == 'event' %}
              <a href="{{ url('view.podujatia.page_1') }}" class="breandcrumb__link color-violet"><i class="fas fa-chevron-left"></i> <span>Podujatia</span></a>
            {% endif %}
          </div>
          <div class="col-12 col-lg-6"><h1 class="mb-0 text-center">{{ node.label }}</h1></div>
          <div class="col-12 col-lg-3"></div>
        </div>
      </div>
    </section>


    <section class="content">
      {{ page.content }}
    </section>

    <div class="container">
      <div class="row">
        <div class="col-12 col-xl-6 offset-xl-3"><div class="separator"></div></div>
      </div>
      {% if node.getType == 'article' %}
      <div class="row">
        <div class="col-12 col-xl-6 offset-xl-3">
          <div class="article__author">
            <div class="author__image">
              <figure>
                {% if node.field_autor_fotografia.entity.uri.value %}
                <img src="{{ file_url(node.field_autor_fotografia.entity.uri.value) }}" alt="Autor článku">
                {% else %}
                <img src="{{ base_path ~ directory }}/img/member_placeholder.png" alt="Ilustračný obrázok">
                {% endif %}
              </figure>
            </div>
            <div class="author__content">
              <p class="m-0 text-muted text-uppercase fs-7">Autor:</p>
              <p class="m-0 color-violet">{{ node.field_autor_meno.value }}</p>
              <p class="m-0 text-muted">{{ node.field_autor_organizacia.value }}</p>
              <p class="m-0 text-muted fs-8">{{ node.field_autor_specializacia.value }}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-xl-6 offset-xl-3"><div class="separator"></div></div>
      </div>
      {% endif %}
    </div>

  </main>

  <footer class="site__footer">

    <div class="footer__upper">

      <div class="media">
        <div class="container">
          {{ page.newsletter_block }}
          <div class="row py-5">
            <div class="col-xl-6 offset-xl-3">
              {{ page.followus_block }}
            </div>
          </div>
        </div>
      </div>

      {{ page.partners_block }}


    </div>
    {{ footer_lower }}
  </footer>
</div>
